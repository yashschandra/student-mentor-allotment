	<script>
		function request_meeting(id,query)
		{
			document.getElementsByName('id')[0].value=id;
			document.getElementsByName('query')[0].value=query;
			document.getElementById('form').submit();
		}
		function leave_event(id,query)
		{
			document.getElementsByName('id')[0].value=id;
			document.getElementsByName('query')[0].value=query;
			document.getElementById('form').submit();
		}
	</script>
