					<tr><td><label for="place" style="color: #ffffff">Place:&nbsp;</label></td><td><input type="text" maxlength="30" name="place" id="place" required/></td></tr>
					<tr><td><button type="submit" id="submit-button">Fix</button></td></tr>
				</table>
